{
    "manifest_version": 2,
    "name": "Update Checker",
    "description": "__MSG_description__",
    "default_locale": "en",
    "version": "0.22.5",
    "background": {
        "page": "/background.html"
    },
    "browser_action": {
        "default_icon": "/images/logo.png"
    },
    "content_scripts": [
        {
            "matches": ["http://www.imdb.com/title/*", "http://www.blu-ray.com/movies/*"],
            "js": ["/js/contentSMB.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://*/*"],
            "include_globs": ["*.xml", "*rss*", "*feed*"],
            "js": ["/js/contentR.js"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "128": "/images/logo.png"
    },
    "options_page": "/options.html",
    "permissions": ["tabs", "alarms", "background", "storage", "notifications", "*://*/*"]
}
